#include<iostream>
using namespace std;
class Student {
    int roll;
    string name;
public:
    // Parameterized constructor
    Student(int r, string n) {
        roll = r;
        name = n;
    }
    void display() {
        cout << "Roll Number: " << roll << endl;
        cout << "Name: " << name << endl;
    }
};
int main() {
    // Creating object with parameters
    Student s1(101, "Ben");
    s1.display();
    return 0;
}
/*
Output:
Roll Number: 113
Name: Ben
*/
